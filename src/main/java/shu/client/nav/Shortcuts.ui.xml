    border-left: 1px solid #999;
    border-right: 1px solid #999;
    border-bottom: 1px solid #999;
  }

  .navHeader {
    gwt-sprite: "gradient";
    background-color: #b4b6bc;
    text-shadow: rgba(255, 255, 255, 1) 0 1px 1px;
    font-size: 1em;
    font-weight: bold;
    text-align: center;
    color: #000;
    padding: 0.5em 0.5em;
    border-top: 1px solid #888;
    border-bottom: 1px solid #888;
  }

